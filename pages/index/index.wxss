/* 轮播图css样式 */
page{
    height: 100%;
}

swiper image{
    width: 100%;
}

swiper{
    height: 26%;
}

/* 导航栏css样式 */
.nav{
    /* 弹性布局 */
    display: flex;
    /* 居中 */
    justify-content: space-between;
    /* 内边距：上下0，左右20px */
    padding: 0 20px;
    /* 外边距 */
    /* 距离顶部40px */
    margin-top: 40px;
}

/* 设置图片样式 */
.navItem image{
    /* 每个导航栏图片的宽和高 */
    width: 100rpx;
    height: 100rpx;
}

/* 设置文字样式 */
.navItem{
    /* 弹性布局 */
    display: flex;
    /* 水平居中 */
    align-items: center;
    /* 向下浮动 */
    flex-direction: column;
}

/* 设置项目信息展示的样式 */
.proItem{
    /* 浮动 */
    display: flex;
    /* 内边距：上下0，左右20px */
    padding: 0 20px;
    /* 外边距 */
    /* 距离顶部40px */
    margin-top: 40px;
}

/* 项目图片的样式 */
.proItem image{
    height: 160rpx;
}

/* 项目描述的样式 */
.proexplain{
    width: 300rpx;
    /* 内容超出的部分进行隐藏 */
    white-space: nowrap;
    overflow: hidden;
    /* 隐藏的部分用省略号代替 */
    text-overflow: ellipsis;
    color: #999;
    font-size: 36rpx;
    margin-top: 20rpx;
}

/* 项目信息设置样式 */
.proInfo{
    margin-left: 20rpx;
    display: flex;
    /* 水平分布 */
    justify-content: center;
}

/* 项目价格设置样式 */
.proprice{
    font-weight: bold;
    color: red;
    margin-top: 20rpx;
}

/* 项目名字样式设置 */
.proname{
    font-weight: bold;
    width: 380rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 预约按钮样式设置 */
.proButton{
    background-color: rgb(204, 112, 51);
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    font-weight: bold;
    text-align: center;
    color: white;
    /* 水平居中分布 */
    line-height: 100rpx;
}

.isData{
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  border-top:1px #989898 solid;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);  
}

.search{
    position: relative;
    margin-bottom: 20rpx;
    padding: 5rpx 20rpx;
    
  }
  .search input{
    border:1px solid #ccc;
    border-radius: 20px;
    height: 30px;
    padding: 5rpx 20rpx;
  }
  .icons{
    position: absolute;
    right: 20px;
    top:8px;
  }