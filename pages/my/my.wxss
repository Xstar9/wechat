/* pages/my/my.wxss */
/* 设置微信头像的样式 */
.top image{
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.top{
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    margin-top: 20rpx;
    align-items: center;
}

.nickName{
    font-weight: bold;
    font-size: 40rpx;
}

.fontcolor{
    color: #999;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.nav{
    display: flex;
    padding: 0 20rpx;
    margin-top: 40rpx;
    justify-content: space-between;
}

.navTab{
    /* 下边框 */
    border-bottom: 1px solid #999;
    padding-bottom: 10rpx;
}

.orderItem{
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    margin-top: 40rpx;

}

.orderItem image{
    width: 260rpx;
    height: 160rpx;
}

.orderInfo{
    margin-left: 20rpx;
}

.price{
    color: red;
}

.time{
    color: orange;
}

.deleteButton{
    margin-left: 20rpx;
    margin-top: 50rpx;
    border-radius: 50rpx;
    height: 100rpx;
    width: 100rpx;
    background-color: rgba(212, 63, 26, 0.918);
    text-align: center;
}

.shanchu{
    color: white;
    font-weight: bold;
    line-height: 100rpx;
}