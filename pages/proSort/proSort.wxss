/* pages/proSort/proSort.wxss */
page{
    background-color:#EECF92;
  }
  .tuijian image{
    width: 100%;
    height: 300rpx;
  }
  .info{
    padding: 0 20rpx;
    height: 80rpx;
    background-color: #FE285B;
    text-align: center;
  }
  .infotext{
    font-size: 60rpx;
    font-weight: bolder;
    color: white;
  }
  .pros{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .proItem{
    width: 46%;
    height: 440rpx;
    margin-top: 10rpx;
    background-color: white;
    margin-left: 16rpx;
    margin-right: 16rpx;
  }
  .proItem image{
    padding: 10rpx 10rpx;
    height: 260rpx;
    width: 335rpx;
  }
  
  .proInfo{
    margin-left: 20rpx;
    display: flex;
    justify-content: space-between;
  }
  .proname{
    font-weight: bold;
    width: 320rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .proprice{
    color: red;
    margin-top: 10rpx;
    font-size: 30rpx;
  }
  .proexplain{
    width: 320rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999999;
    font-size: 30rpx;
    margin-top: 10rpx;
  }
  .isData{
    text-align: center;
    color: #999999;
    padding: 40rpx 0;
  }