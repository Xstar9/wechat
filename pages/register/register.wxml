<!--pages/register/register.wxml-->
<!-- 注册页面 -->
<view class="wapper">
    <form catchsubmit="formSubmit">
        <view class="formItem">
            <text>用户名：</text>
            <input type="text" name="username" placeholder="请输入用户名"></input>
        </view>

        <view class="formItem">
            <text>手机号：</text>
            <input type="text" name="phone" placeholder="请输入手机号"></input>
        </view>

        <view class="formItem">
            <text space="nbsp">密   码：</text>
            <input type="password" name="password" placeholder="请输入密码"></input>
        </view>
        <button style="width: 80%;" class="btn" formType="submit">注册账号</button>
    </form>
</view>